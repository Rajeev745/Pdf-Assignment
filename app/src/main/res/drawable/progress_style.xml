<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background rectangle -->
    <item android:gravity="fill_horizontal">
        <shape android:shape="rectangle">
            <solid android:color="@color/progress_bar" />
            <corners android:radius="4dp" /> <!-- Adjust the radius as needed for rounded corners -->
        </shape>
    </item>

    <!-- Filled rectangle -->
    <item android:gravity="start">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/white" />
                <corners android:radius="4dp" /> <!-- Adjust the radius as needed for rounded corners -->
            </shape>
        </clip>
    </item>
</layer-list>
